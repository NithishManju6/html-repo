{
    "name": "Hello Extensions",
    "description": "Base Level Extension",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_title": "hello1",
        "default_icon": {
            "16": "/assets/images/icons8-chat-24.png"
        }
    },
    "permissions": [
        "tabs",
        "topSites"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "/assets/js/popup.js"
            ]
        }
    ],
    "chrome_url_overrides": {
        "newtab": "/popup.html"
    }
}